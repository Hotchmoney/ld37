          <argument>
            <kind>1</kind>
            <string>///Handle Player Movement

//Move the player
if ( target_x &gt; x ) { x += 8 } //right
if ( target_x &lt; x ) { x -= 8 } //left
if ( target_y &gt; y ) { y += 8 } //down
if ( target_y &lt; y ) { y -= 8 } //up

//Check for destination
if ( target_x == x &amp;&amp; target_y == y) {
    numMoves++;
    moving = false;
    image_speed = 0;
}

//Handle input
if (keyboard_check(vk_left)) {
    Move('x', -1, spr_Player_Left);
} else if (keyboard_check(vk_right)) {
    Move('x', 1, spr_Player_Right);
} else if (keyboard_check(vk_up)) {
    Move('y', -1, spr_Player_Up);
} else if (keyboard_check(vk_down)) {
    Move('y', 1, spr_Player_Down);
}

// if the object is outside the camera
if(x &lt; view_xview) { // to the left
    view_xview[0] -= view_wview;
}
if(x &gt; view_xview + view_wview) { // to the right
    view_xview[0] += view_wview;
}
if (y &lt; view_yview) { // top
    view_yview[0] -= view_hview;
}
if(y &gt; view_yview + view_hview) { // bottom
    view_yview[0] += view_hview;
}

// esc
if (keyboard_check(vk_escape)){
    obj_gamemanager.cur_asteroid_level = 0;
    room_goto(main_room);
}

</string>
